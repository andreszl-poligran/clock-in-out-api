{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es6"],
    "types": ["node", "jest"],
    "rootDir": "./"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "nodejs"]
}